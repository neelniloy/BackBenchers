<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItem"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/newsfeed_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_gravity="right"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="5dp"
                android:id="@+id/newsfeed_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp"
                android:src="@drawable/ic_logo" />


            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/newsfeed_pic"
                android:id="@+id/tv_news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:linksClickable="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="User Name"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/newsfeed_pic"
                android:layout_below="@+id/tv_news_name"
                >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ•’"/>

                    <TextView
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="#ACACAC"
                        android:textIsSelectable="false"
                        android:textSize="12sp"
                        />


            </LinearLayout>




            <LinearLayout
                android:layout_below="@+id/newsfeed_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/tv_news_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:text="Newsfeed"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="0dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/post_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/logo"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height=".2dp"
                                    app:cardBackgroundColor="#7A8FA6"
                                    app:cardElevation="0dp"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_gravity="bottom"
                                    android:id="@+id/action_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/colorWhite"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:layout_marginStart="50dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"

                                        android:padding="0dp">

                                        <androidx.cardview.widget.CardView

                                            app:cardElevation="0dp"
                                            android:id="@+id/cv_like"
                                            android:layout_width="80dp"
                                            android:layout_height="40dp"
                                            android:clickable="true"
                                            android:foreground="?android:attr/selectableItemBackground"
                                            >

                                            <LinearLayout
                                                android:layout_gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:id="@+id/likebtn"
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:src="@drawable/dislike" />

                                                <TextView
                                                    android:id="@+id/numoflikes"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="8dp"
                                                    android:padding="2dp"
                                                    android:text="0"
                                                    android:textColor="#7A8FA6"
                                                    android:textSize="14sp" />

                                            </LinearLayout>

                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>



                                    <LinearLayout
                                        android:layout_marginEnd="50dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:orientation="horizontal">

                                        <androidx.cardview.widget.CardView
                                            app:cardElevation="0dp"
                                            android:id="@+id/cv_comment"
                                            android:layout_width="80dp"
                                            android:layout_height="40dp"
                                            android:clickable="true"
                                            android:foreground="?android:attr/selectableItemBackground"
                                            >

                                            <LinearLayout
                                                android:layout_marginLeft="5dp"
                                                android:layout_gravity="center"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:id="@+id/commentbtn"
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:src="@drawable/comment" />

                                                <TextView
                                                    android:id="@+id/commentCount"
                                                    android:padding="2dp"
                                                    android:layout_marginLeft="8dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="0"
                                                    android:textSize="14sp"
                                                    android:textColor="#7A8FA6" />

                                            </LinearLayout>

                                        </androidx.cardview.widget.CardView>


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>



                        </androidx.cardview.widget.CardView>




                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>