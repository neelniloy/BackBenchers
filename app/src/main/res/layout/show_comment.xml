<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout

            android:layout_marginBottom="5dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/c_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width=".2dp" />

                <LinearLayout

                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_blood_shape">

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="2dp"
                            android:id="@+id/tv_comment_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/colorBlack"
                            android:textIsSelectable="false"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="2dp"
                            android:textIsSelectable="true"
                            android:id="@+id/tv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#35383C"
                            android:text="Comment"
                            android:textSize="14sp"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:textStyle="italic"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_comment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="#ACACAC"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:padding="0dp">

                            <androidx.cardview.widget.CardView
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#00FAF6F6"
                                android:id="@+id/cv_comment_like"
                                android:layout_width="60dp"
                                android:layout_height="20dp"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                >

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/comment_likebtn"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/dislike" />

                                    <TextView
                                        android:id="@+id/numofclikes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:padding="2dp"
                                        android:text="0"
                                        android:textColor="#7A8FA6"
                                        android:textSize="12sp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center">

                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="#00FAF6F6"
                                app:cardElevation="0dp"
                                android:id="@+id/cv_delete"
                                android:layout_width="60dp"
                                android:layout_height="20dp"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                >

                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_marginRight="0dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/sharetbtn"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_delete" />

                                    <TextView
                                        android:id="@+id/shareCount"
                                        android:padding="2dp"
                                        android:layout_marginLeft="8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textSize="14sp"
                                        android:textColor="#7A8FA6" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>